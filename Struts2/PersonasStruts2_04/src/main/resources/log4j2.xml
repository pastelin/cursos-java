<?xml version="1.0" encoding="UTF-8"?>

<Configuration>
    <Appenders>
        <Console name="STDOUT" target="SYSTEM_OUT">
            <PatternLayout pattern="(%F:%L) - %m%n" />
        </Console>
    </Appenders>
    <Loggers>
        <Logger name="com.opensymphony" level="info" />
        <Logger name="org.apache.struts2" level="info" />
        <Root level="info">
            <AppenderRef  ref="STDOUT" />
        </Root>
    </Loggers>
</Configuration>